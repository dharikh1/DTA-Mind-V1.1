# DTA-Mind Production Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_TYPE=sqlite
DATABASE_PATH=/app/data

# For PostgreSQL (uncomment and configure if using PostgreSQL)
# DATABASE_TYPE=postgres
# DATABASE_HOST=postgres
# DATABASE_PORT=5432
# DATABASE_USER=dtamind
# DATABASE_PASSWORD=dtamind_password
# DATABASE_NAME=dtamind

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=production
SECRETKEY_PATH=/app/data
DEBUG=false
LOG_PATH=/app/data/logs
BLOB_STORAGE_PATH=/app/data/storage

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGIN=*
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# =============================================================================
# EXTERNAL SERVICES (Configure your API keys)
# =============================================================================
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_API_KEY=your-google-api-key
# COHERE_API_KEY=your-cohere-api-key

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/data/uploads
CACHE_TTL=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_TELEMETRY=false
ENABLE_ANALYTICS=false
ENABLE_MARKETPLACE=true
